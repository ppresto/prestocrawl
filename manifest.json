{
  "manifest_version": 3,
  "name": "PrestoCrawl",
  "version": "1.1",
  "description": "Injects a persistent panel into the current tab to crawl, download, and zip pages. Made by Patrick Presto.",
  "permissions": [
    "activeTab",
    "scripting",
    "downloads"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "src/background/background.js",
    "type": "module"
  },
  "action": {
    "default_title": "PrestoCrawl",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "images/logo.webp",
        "src/libs/readability.js",
        "src/libs/m3u8-parser.min.js",
        "src/libs/jszip.min.js",
        "src/content/content_fetcher.js",
        "src/content/video_extractor.js",
        "src/content/injected_panel.js",
        "readable.html",
        "reader.css"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
